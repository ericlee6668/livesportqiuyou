<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp6"
    android:background="@drawable/shape_intelligence_bg">

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/exponentTab"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_navigator_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <include
        android:id="@+id/matchItemHeader"
        layout="@layout/item_match_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        app:layout_constraintTop_toBottomOf="@id/exponentTab" />

    <ImageView
        android:id="@+id/exponentDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/live_gary"
        app:layout_constraintTop_toBottomOf="@id/matchItemHeader" />

    <FrameLayout
        android:id="@+id/exponentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exponentDivider" />
</androidx.constraintlayout.widget.ConstraintLayout>