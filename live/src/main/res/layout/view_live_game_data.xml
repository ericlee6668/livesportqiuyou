<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:srlEnableOverScrollDrag="true">

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlTextLoading="正在加载" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/live_f7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/tv_round1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_common_02"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="第一局"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_round2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="第二局"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_round3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="第三局"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_round4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="第四局"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_round5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="第五局"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_team_a"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/icon_default_logo" />

                            <TextView
                                android:id="@+id/tv_team_a_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10"
                                android:layout_marginEnd="@dimen/dp10"
                                android:textColor="@color/black2"
                                android:textSize="13sp"
                                tools:text="GAM" />

                            <ImageView
                                android:id="@+id/iv_team_a_cup"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/icon_cup"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_team_a_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF5116"
                                android:textSize="18sp"
                                tools:text="27" />

                            <TextView
                                android:id="@+id/tv_game_odds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10"
                                android:layout_marginEnd="@dimen/dp10"
                                android:textColor="@color/black2"
                                android:textSize="12sp"
                                tools:text="30 : 16" />

                            <TextView
                                android:id="@+id/tv_team_b_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF5116"
                                android:textSize="18sp"
                                tools:text="23" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_team_b_cup"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/icon_cup"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tv_team_b_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10"
                                android:layout_marginEnd="@dimen/dp10"
                                android:textColor="@color/black2"
                                android:textSize="13sp"
                                tools:text="EVS" />

                            <ImageView
                                android:id="@+id/iv_team_b"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/icon_default_logo" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10">

                        <LinearLayout
                            android:id="@+id/ll_ban"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Ban"
                            android:textColor="@color/black2"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/ll_ban2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="@dimen/dp2"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingBottom="@dimen/dp20">

                        <LinearLayout
                            android:id="@+id/ll_pick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Pick"
                            android:textColor="#FF5116"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/ll_pick2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingTop="12dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:id="@+id/live_view_left"
                            android:layout_width="33dp"
                            android:layout_height="11dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/bg_live_historgram_left"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_team_a_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:textColor="@color/live_2B2626"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="@+id/live_view_left"
                            app:layout_constraintLeft_toRightOf="@+id/live_view_left"
                            app:layout_constraintTop_toTopOf="@+id/live_view_left"
                            tools:text="GAM" />

                        <View
                            android:id="@+id/live_view_right"
                            android:layout_width="33dp"
                            android:layout_height="11dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="@dimen/dp10"
                            android:background="@drawable/bg_live_historgram_right"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_team_b_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/live_2B2626"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="@+id/live_view_right"
                            app:layout_constraintRight_toLeftOf="@+id/live_view_right"
                            app:layout_constraintTop_toTopOf="@+id/live_view_right"
                            tools:text="EVS" />

                        <com.yunbao.live.custom.LiveGameDataBarView
                            android:id="@+id/live_game_data_bar_view"
                            app:layout_constraintTop_toBottomOf="@+id/live_view_left"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="经济差"
                            android:textColor="@color/black2"
                            android:textSize="13sp" />

                        <com.yunbao.live.utils.mpchart.LineChartInViewPager
                            android:id="@+id/line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginTop="@dimen/dp10"
                            android:paddingBottom="@dimen/dp20">

                        </com.yunbao.live.utils.mpchart.LineChartInViewPager>

                    </LinearLayout>

                    <include
                        android:id="@+id/ll_team_a_view"
                        layout="@layout/view_live_game_data_team" />

                    <include
                        android:id="@+id/ll_team_b_view"
                        layout="@layout/view_live_game_data_team" />

                </LinearLayout>
            </LinearLayout>


            <include layout="@layout/view_live_no_data" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>