<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/live_ll_match_info"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="@mipmap/bg_default_live_football"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/live_tv_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="今晚 18:00" />

            <TextView
                android:id="@+id/tv_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">

            <ImageView
                android:id="@+id/live_iv_team_one_icon"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/icon_default_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/live_tv_score_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/live_view_stats"
                app:layout_constraintEnd_toStartOf="@+id/live_view_stats"
                app:layout_constraintTop_toTopOf="@+id/live_view_stats"
                tools:text="211" />

            <TextView
                android:id="@+id/live_tv_score_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/live_view_stats"
                app:layout_constraintStart_toEndOf="@+id/live_view_stats"
                app:layout_constraintTop_toTopOf="@+id/live_view_stats"
                tools:text="211" />

            <TextView
                android:id="@+id/live_iv_team_one_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/live_iv_team_one_icon"
                app:layout_constraintRight_toRightOf="@+id/live_iv_team_one_icon"
                app:layout_constraintTop_toBottomOf="@+id/live_iv_team_one_icon"
                tools:text="柏迪亚柏柏迪亚" />


            <TextView
                android:id="@+id/live_view_stats"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/live_iv_team_one_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/live_iv_team_one_icon" />

            <TextView
                android:id="@+id/live_tv_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FFB2B2B2"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/live_iv_team_one_name"
                app:layout_constraintLeft_toLeftOf="@+id/live_view_stats"
                app:layout_constraintRight_toRightOf="@+id/live_view_stats"
                tools:text="未开赛" />

            <TextView
                android:id="@+id/live_tv_seconds"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_status"
                android:gravity="center"
                android:text="29 '"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/live_view_stats"
                app:layout_constraintRight_toRightOf="@+id/live_view_stats"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="29 '" />

            <ImageView
                android:id="@+id/live_iv_team_two_icon"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/icon_default_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/live_iv_team_two_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/live_iv_team_two_icon"
                app:layout_constraintRight_toRightOf="@+id/live_iv_team_two_icon"
                app:layout_constraintTop_toBottomOf="@+id/live_iv_team_two_icon"
                tools:text="卢捷斯卢捷斯捷斯斯" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/live_tv_living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_live_btn_white"
            android:drawableStart="@mipmap/icon_live_video"
            android:drawablePadding="4dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:text="视频直播"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/live_ll_match_info" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator" />

    <FrameLayout
        android:id="@+id/play_container"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="#000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/ll_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:onClick="backClick"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp40"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="202法的说服定交第三方324" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>