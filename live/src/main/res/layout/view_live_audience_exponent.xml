<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableOverScrollDrag="true">

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlTextLoading="正在加载" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/live_f7f7f7">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/live_rv_games_num"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:overScrollMode="never"
            android:padding="@dimen/dp10"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/live_cl_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/live_rv_games_num">

            <View
                android:layout_width="2dp"
                android:layout_height="13dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:background="#FAAD14"
                app:layout_constraintBottom_toBottomOf="@+id/live_tv_initial_plate"
                app:layout_constraintRight_toLeftOf="@+id/live_tv_initial_plate" />

            <TextView
                android:id="@+id/live_tv_initial_plate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="120dp"
                android:text="初始盘"
                android:textColor="@color/live_2B2626"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/live_tv_now_plate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="120dp"
                android:text="即时盘"
                android:textColor="@color/live_2B2626"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="2dp"
                android:layout_height="13dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:background="#13C2C2"
                app:layout_constraintBottom_toBottomOf="@+id/live_tv_now_plate"
                app:layout_constraintRight_toLeftOf="@+id/live_tv_now_plate" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/live_ll_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/live_cl_plate">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:gravity="center_horizontal"
                android:text="获胜者"
                android:textColor="#FF5116"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/live_tv_team_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="18.75"
                android:gravity="center_horizontal"
                tools:text="LGD"
                android:textColor="@color/live_2B2626"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/live_tv_team_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="18.75"
                android:gravity="center_horizontal"
                tools:text="IG"
                android:textColor="@color/live_2B2626"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/live_ll_team_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>