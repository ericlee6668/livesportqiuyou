                        <TextView
                            android:id="@+id/live_tv_hero_two_num_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="3局"
                            android:textColor="@color/live_2B2626"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/live_tv_hero_two_winning_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0%"
                            android:textColor="#D48806"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
