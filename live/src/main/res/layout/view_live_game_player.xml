<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:srlEnableOverScrollDrag="true">

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlTextLoading="正在加载" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/live_f7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/bg_btn_common_03"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/live_tv_upper_road"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_common_02"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="上单"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/live_tv_fighting_wild"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="打野"
                    android:textColor="@color/live_ff5116" />

                <TextView
                    android:id="@+id/live_tv_center_road"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="中单"
                    android:textColor="@color/live_ff5116" />

                <TextView
                    android:id="@+id/live_tv_adc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="ADC"
                    android:textColor="@color/live_ff5116" />

                <TextView
                    android:id="@+id/live_tv_auxiliary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="辅助"
                    android:textColor="@color/live_ff5116" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginBottom="@dimen/dp20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/live_iv_team_a_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_default_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/live_tv_team_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="GAM"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/live_iv_team_a_icon"
                    app:layout_constraintLeft_toRightOf="@+id/live_iv_team_a_icon"
                    app:layout_constraintTop_toTopOf="@+id/live_iv_team_a_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="战队数据对比（近10场）"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/live_tv_team_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="EVS"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/live_iv_team_b_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.533" />

                <ImageView
                    android:id="@+id/live_iv_team_b_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icon_default_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">

                <ImageView
                    android:id="@+id/live_iv_team_alternate_one_a"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/live_iv_team_alternate_two_a"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintLeft_toRightOf="@+id/live_iv_team_alternate_one_a"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/live_iv_team_alternate_three_a"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintLeft_toRightOf="@+id/live_iv_team_alternate_two_a"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/live_iv_team_alternate_one_b"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintRight_toLeftOf="@+id/live_iv_team_alternate_two_b"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/live_iv_team_alternate_two_b"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintRight_toLeftOf="@+id/live_iv_team_alternate_three_b"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/live_iv_team_alternate_three_b"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:src="@mipmap/live_player_alternate_avatar"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/live_iv_player_one_avatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_default_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/live_tv_player_a_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="GAM"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@+id/live_iv_player_one_avatar"
                    app:layout_constraintRight_toRightOf="@+id/live_iv_player_one_avatar"
                    app:layout_constraintTop_toBottomOf="@+id/live_iv_player_one_avatar" />

                <TextView
                    android:id="@+id/live_tv_a_winning_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="0%"
                    android:textColor="#D48806"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/live_cp_view"
                    app:layout_constraintRight_toLeftOf="@+id/live_cp_view"
                    app:layout_constraintTop_toTopOf="@+id/live_cp_view" />


                <com.yunbao.live.views.CircularProgressView
                    android:id="@+id/live_cp_view"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    app:backColor="#EBEBEB"
                    app:backWidth="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:progFirstColor="#86E7DE"
                    app:progStartColor="#0CC3C1"
                    app:progWidth="7dp"
                    app:progress="0" />

                <TextView
                    android:id="@+id/live_tv_b_winning_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="0%"
                    android:textColor="#08979C"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/live_cp_view"
                    app:layout_constraintLeft_toRightOf="@+id/live_cp_view"
                    app:layout_constraintTop_toTopOf="@+id/live_cp_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胜率"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/live_tv_player_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="EVS"
                    android:textColor="@color/black2"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@+id/live_iv_player_two_icon"
                    app:layout_constraintRight_toRightOf="@+id/live_iv_player_two_icon"
                    app:layout_constraintTop_toBottomOf="@+id/live_iv_player_two_icon" />

                <ImageView
                    android:id="@+id/live_iv_player_two_icon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icon_default_logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
