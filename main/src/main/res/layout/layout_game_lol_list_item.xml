<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/bg_touch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:textColor="#08979C"
            android:textSize="12sp"
            tools:text="LoL全明星夏季赛" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_game_name"
            android:gravity="center|start"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="20:08" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center|start"
            android:textColor="#FF5116"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="第二局" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp5"
                android:src="@mipmap/icon_friend" />

            <TextView
                android:id="@+id/tv_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center|start"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="2345" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/tv_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp60"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_gam"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp5"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_default_logo" />

                <ImageView
                    android:id="@+id/iv_evs"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_default_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gam"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center|start"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="GAM" />

                <TextView
                    android:id="@+id/tv_evs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center|start"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="EVS" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gam_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:textColor="#FF5116"
                    android:textSize="12sp"
                    tools:text="18" />

                <TextView
                    android:id="@+id/tv_evs_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:textColor="#FF5116"
                    android:textSize="12sp"
                    tools:text="12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_decimal_points"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gam_decimal_points"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="1.61" />

                <TextView
                    android:id="@+id/tv_evs_decimal_points"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:textSize="12sp"
                    tools:text="3.35" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_lock"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_lock1"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_lock" />

                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_below="@+id/iv_lock1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_lock" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_play_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
     </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/gray2" />
</LinearLayout>