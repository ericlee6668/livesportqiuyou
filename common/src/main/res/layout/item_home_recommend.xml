<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.yunbao.common.custom.RatioRoundImageView
            android:id="@+id/iv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:ri_ratio="0.5625"
            app:riv_corner_radius="5dp" />

        <!--        <com.makeramen.roundedimageview.RoundedImageView-->
        <!--            android:id="@+id/iv_main"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:riv_corner_radius="5dp" />-->


        <ImageView
            android:id="@+id/iv_palying"
            android:layout_width="12dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_item_living" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#ff2b2626"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="冠军杯赛" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_game_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ll_num"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#B32b2626"
            android:textSize="10sp"
            tools:text="考核方式接口" />

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:src="@mipmap/icon_home_hot_small" />

            <TextView
                android:id="@+id/tv_main_view_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp"
                android:textColor="#B32b2626"
                android:textSize="10sp"
                tools:text="28875" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>